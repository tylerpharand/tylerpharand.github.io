{
	"compilerOptions": {
        "module": "none",
        "target": "es5",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
        "outFile": "bin/pixi-display.js",
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "typeRoots": [
          "lib/"
        ]
	},
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}
